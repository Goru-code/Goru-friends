<div class="container my-4">


  <div class="card mb-4">
    <div class="card-body">
      <%= render @friend %>
    </div>
  </div>

  <div class="text-center mt-4">
  <% if @friend.user == current_user %>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-outline-primary mx-2" %><br>
    <%= button_to "Destroy this friend", @friend, method: :delete, data: { confirm: "Are you sure you want to delete this friend?" }, class: "btn btn-outline-danger mt-2"%>

    <br><br>
  
  <% end %>
    <%= link_to "Back to friends", friends_path, class: "btn btn-outline-secondary mx-2" %> 
    <%= link_to "Back to home", root_path, class: "btn btn-outline-secondary mx-2" %>

    <br><br>

  </div>
</div>
