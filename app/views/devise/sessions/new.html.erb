<!-- Add Bootstrap and Animate.css links in your layout file -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card shadow-lg border-0 rounded animate__animated animate__fadeInDown">
        <div class="card-body p-5">
          <h2 class="text-center text-primary mb-4">Log in</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "form-label text-secondary" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "examplr@example.com" %>
            </div>

            <div class="form-group mt-4">
              <%= f.label :password, class: "form-label text-secondary" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Enter your password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
  <label class="form-check-label" for="flexSwitchCheckChecked">Remember me</label>
</div>
            <% end %>

            <div class="text-center mt-4">
              <%= f.submit "Log in", class: "btn btn-primary btn-lg w-100 animate__animated animate__pulse animate__infinite" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Optional: Add a background image to make the page more unique -->
<style>
  body {
    background-image: url('https://source.unsplash.com/1600x900/?abstract,technology');
    background-size: cover;
    background-attachment: fixed;
    background-position: center;
  }

  .card {
    background: rgba(255, 255, 255, 0.8);
    border-radius: 15px;
  }

  .form-label {
    font-size: 1.1rem;
  }

  .form-control {
    padding: 15px;
    font-size: 1.1rem;
  }

  .btn {
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #0d6efd;
  }
</style>
