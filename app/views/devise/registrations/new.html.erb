<!-- Add Bootstrap and Animate.css links in your layout file -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card shadow-lg border-0 rounded animate__animated animate__fadeInUp">
        <div class="card-body p-5">
          <h2 class="text-center text-success mb-4">Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, class: "form-label text-secondary" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Enter your email" %>
            </div>

            <div class="form-group mt-4">
              <%= f.label :password, class: "form-label text-secondary" %>
              <% if @minimum_password_length %>
                <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Create a password" %>
            </div>

            <div class="form-group mt-4">
              <%= f.label :password_confirmation, class: "form-label text-secondary" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Confirm your password" %>
            </div>

            <div class="text-center mt-4">
              <%= f.submit "Sign up", class: "btn btn-success btn-lg w-100 animate__animated animate__pulse animate__infinite" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Optional: Add a different background image for this page -->
<style>
  body {
    background-image: url('https://source.unsplash.com/1600x900/?nature,abstract');
    background-size: cover;
    background-attachment: fixed;
    background-position: center;
  }

  .card {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 15px;
  }

  .form-label {
    font-size: 1.1rem;
  }

  .form-control {
    padding: 15px;
    font-size: 1.1rem;
  }

  .btn {
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #28a745;
  }
</style>
