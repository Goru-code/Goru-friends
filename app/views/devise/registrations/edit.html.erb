<!-- Add Bootstrap and Animate.css links in your layout file -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-lg border-0 rounded animate__animated animate__fadeInRight">
        <div class="card-body p-5">
          <h2 class="text-center text-info mb-4">Edit <%= resource_name.to_s.humanize %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, class: "form-label text-secondary" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Enter your email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-warning">
                <strong>Confirmation pending for:</strong> <%= resource.unconfirmed_email %>
              </div>
            <% end %>

            <div class="form-group mt-4">
              <%= f.label :password, class: "form-label text-secondary" %> 
              <i class="text-muted">(Leave blank if you donot want to change it)</i>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "New password" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted mt-2">
                  <%= @minimum_password_length %> characters minimum
                </small>
              <% end %>
            </div>

            <div class="form-group mt-4">
              <%= f.label :password_confirmation, class: "form-label text-secondary" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Confirm new password" %>
            </div>

            <div class="form-group mt-4">
              <%= f.label :current_password, class: "form-label text-secondary" %>
              <i class="text-muted">(We need your current password to confirm your changes)</i>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Current password(Required)" %>
            </div>

            <div class="text-center mt-4">
              <%= f.submit "Update", class: "btn btn-info btn-lg w-100 animate__animated animate__pulse animate__infinite" %>
            </div>
          <% end %>

          <h3 class="text-center text-danger mt-5">Cancel my account</h3>
<div class="text-center">
  <%= button_to "Cancel my account", 
                registration_path(resource_name), 
                data: { confirm: "Are you sure you want to cancel your account?" }, 
                method: :delete, 
                class: "btn btn-outline-danger mt-2" %>
</div>

          </div>

          <div class="text-center mt-3">
            <%= link_to "Back", :back, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Optional: Add background design -->
<style>
  body {
    background-image: url('https://source.unsplash.com/1600x900/?tech,minimal');
    background-size: cover;
    background-attachment: fixed;
    background-position: center;
  }

  .card {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 15px;
  }

  .form-label {
    font-size: 1.1rem;
  }

  .form-control {
    padding: 15px;
    font-size: 1.1rem;
  }

  .btn {
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #17a2b8;
  }

  .btn-outline-danger:hover {
    background-color: #dc3545;
    color: white;
  }
</style>
